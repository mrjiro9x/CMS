<%-include ('layouts/header')%>

<div class="clearfix"></div>
<div class="login">
    <li class="steps active" style="list-style: none;">
        <div class="step-description">
            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <div class="run-customer">
                        <%if(data && data.error){%>
                            <div class="alert alert-danger"><%=data.error%></div>
                        <%}%>
                        <h5>
                            Login
                        </h5>
                        <form method="POST">
                            <div class="form-row">
                                <label class="lebel-abs">
                                    Email 
                                    <strong class="red">
                                    *
                                    </strong>
                                </label>
                                <input type="email" class="input namefild" name="email" required>
                            </div>
                            <div class="form-row">
                                <label class="lebel-abs">
                                    Password 
                                    <strong class="red">
                                    *
                                    </strong>
                                </label>
                                <input type="password" class="input namefild" name="password" required>
                            </div>
                            <p class="forgoten">
                                <a href="#">
                                    Forgoten your password?
                                </a>
                            </p>
                            <input type="submit" value="Login" style="width: 90px; height: 35px; border-radius: 10px;">
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </li>
</div>
<div class="clearfix"></div>

<%-include ('layouts/footer')-%>